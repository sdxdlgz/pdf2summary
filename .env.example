# Research Report Processor - Environment Variables Template
# Copy this file to .env and fill in the values

# =============================================================================
# MinerU API Configuration (Requirement 11.1)
# =============================================================================
# API token for MinerU service - used for PDF parsing
MINERU_API_TOKEN=your_mineru_api_token_here

# =============================================================================
# AI Service Configuration (Requirements 11.2, 11.3)
# =============================================================================
# OpenAI-compatible API endpoint for translation and summarization
AI_API_ENDPOINT=https://api.openai.com/v1

# API key for the AI service
AI_API_KEY=your_ai_api_key_here

# =============================================================================
# Storage Configuration (Requirement 11.4)
# =============================================================================
# Path for storing uploaded files and generated outputs
# In Docker, this should be a mounted volume path
STORAGE_PATH=/app/storage

# =============================================================================
# Server Configuration (Requirement 11.5)
# =============================================================================
# HTTP port for the web server (default: 8765)
SERVER_PORT=8765

# Frontend port exposed to host (default: 8765)
FRONTEND_PORT=8765

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL for task queue and state storage
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Optional Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# AI model to use for translation and summarization
AI_MODEL=gpt-5-nano

# Maximum concurrent AI requests
AI_MAX_CONCURRENCY=10

# Download link expiration time in seconds (default: 24 hours)
DOWNLOAD_LINK_EXPIRY=86400
